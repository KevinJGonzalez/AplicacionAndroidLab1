<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/LinearLContenedor"
        android:layout_width="360dp"
        android:layout_height="85dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/imvProducto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/laptop" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/LinearLProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txvCategoria"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:text="@string/categoria_del_producto"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txvDescripcion"
                android:layout_width="265dp"
                android:layout_height="65dp"
                android:maxLines="3"
                android:text="@string/textview"
                android:textColor="#1C1919"
                android:textSize="13sp"
                tools:text="DescripciÃ³n del Producto" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>